@import url('https://fonts.googleapis.com/css2?family=Hanken+Grotesk:wght@500;700;800&display=swap');

:root {
    /* Primary Colors */
    --light-red: hsl(0, 100%, 67%);
    --orangey-yellow: hsl(39, 100%, 56%);
    --green-teal: hsl(166, 100%, 37%);
    --cobalt-blue: hsl(234, 85%, 45%);

    /* Alpha-adjusted Primary Colors */
    --light-red-alpha: hsl(0, 100%, 95%);
    --orangey-yellow-alpha: hsl(39, 100%, 95%);
    --green-teal-alpha: hsl(166, 100%, 95%);
    --cobalt-blue-alpha: hsl(234, 85%, 95%);

    /* Background Gradients*/
    --light-slate-blue: hsl(252, 100%, 67%);
    --light-royal-blue: hsl(241, 81%, 54%);

    /* Circle Gradients*/
    --violet-blue: hsla(256, 72%, 46%, 1);
    --persian-blue: hsla(241, 72%, 46%, 0);

    /* Neutral Colors */
    --white: hsl(0, 0%, 100%);
    --pale-blue: hsl(221, 100%, 96%);
    --light-lavender: hsl(241, 100%, 89%);
    --dark-gray-blue: hsl(224, 30%, 27%);

    /* Font */

}

* {
    font-family: "Hanken Grotesk", sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    --medium: 500;
    --bold: 700;
    --extra-bold: 800;
}

main {
    background-color: var(--white);
    height: calc(100vh - 1px);
    display: flex;
    align-items: center;
    justify-content: center;
}

p {
    font-size: 18px;
    font-weight: var(--medium);
}

.results_and_summary_card {
    background-color: var(--white);
    width: 620px;
    border-radius: 1.5rem;
    display: flex;
    box-shadow: 1rem 1rem 2rem rgba(0, 0, 0, 0.1);
}

.results,
.summary {
    width: 100%;
    border-radius: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}

.results {
    background: linear-gradient(var(--light-slate-blue), var(--light-royal-blue));
}

.results_header {
    color: var(--light-lavender);
}

.results h1 {
    color: var(--pale-blue);
    margin-bottom: 1rem;
}

.results p {
    color: var(--pale-blue);
    text-align: center;
}

.summary {
    background-color: var(--white);
}

.summary_header {
    color: var(--dark-gray-blue);
    display: flex;
    align-items: center;
    justify-content: left;
    width: 100%;
}

svg {
    margin: 0.75rem;
}

.results .circle {
    width: 10rem;
    height: 10rem;
    background: linear-gradient(var(--violet-blue), var(--persian-blue));
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
}

.circle h1 {
    color: var(--white);
    font-size: 3.5rem;
    font-weight: var(--extra-bold);
    margin-bottom: -0.5rem;
}

.circle p {
    color: var(--light-lavender);
}

button {
    background-color: var(--dark-gray-blue);
    color: var(--pale-blue);
    border-radius: 2rem;
    width: 100%;
    font-weight: var(--medium);
    padding: 1rem;
    border: none;
}

button:hover {
    background-color: var(--cobalt-blue);

}

ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
}

li.summary_breakdown {
    list-style-type: none;
    width: 100%;
    border-radius: 0.5rem;
    margin: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--bold);
}

li.summary_breakdown div.left_section {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: left;
    margin-right: 2rem;
}

li.summary_breakdown div.right_section {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: right;
    margin-right: 1rem;
}

li.reaction div.left_section {
    color: var(--light-red);
}

li.reaction {
    background-color: var(--light-red-alpha);
}

li.memory div.left_section {
    color: var(--orangey-yellow);
}

li.memory {
    background-color: var(--orangey-yellow-alpha);
}

li.verbal div.left_section {
    color: var(--green-teal);
}

li.verbal {
    background-color: var(--green-teal-alpha);
}

li.visual div.left_section {
    color: var(--cobalt-blue);
}

li.visual {
    background-color: var(--cobalt-blue-alpha);
}

.out_of {
    color: var(--green-teal);
}

@media (max-width: 375px) {
    main {
        height: auto;
    }

    .results_and_summary_card {
        flex-direction: column;
        width: 350px;
    }

    .results {
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }

}